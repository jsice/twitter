<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <div class="container">
      <div class="row">
        <div class="col-2 bg-info text-light p-2">
          Hashtags
        </div>
        <div class="col-8">
        <%= yield %>
        </div>
        <div class="col-2 bg-warning text-dark p-2">
          Followers?
        </div>
      </div>
    </div>
  </body>
</html>
